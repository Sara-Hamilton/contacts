@{
  Layout = "_Layout";
}

<h1>@Model.GetFirstName() @Model.GetLastName()</h1>
<p>Phone: @Model.GetPhone()</p>
<p>Street: @Model.GetStreet()</p>
<p>City: @Model.GetCity()</p>
<p>State: @Model.GetState()</p>
<p>Zip: @Model.GetZip()</p>

<form action="/contacts/delete_one" method="post">
  <input type="hidden" id="contact-id" name="contact-id" value="@Model.GetId()">
  <button type="submit" class="btn btn-primary">Clear this Contact</button>
</form>
<p><a href="/contacts/new">Add Contact</a></p>
<p><a href="/contacts">View all Contacts</a></p>
